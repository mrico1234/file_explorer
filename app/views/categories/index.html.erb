<h1>Carpetas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <% if category.root? %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Mostrar', category %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <td><%= link_to 'Destruir', category, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

