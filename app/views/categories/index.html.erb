<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <!-- <th>String</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          
          <%#= link_to( content_tag( :i, nil, class: 'fa fa-trash-o' ), method: :delete, data: { confirm: 'Are you sure?' } ) %>
          <%= link_to icon('fas', 'folder', class: "fa-4x"), category %>
          <br>  
          <%= category.name %>
        </td>
        <td><%#= link_to 'Show', category %></td>
        <td><%= link_to icon('fas', 'edit', class: "fa-2x"), edit_category_path(category) %></td>
        <td><%= link_to icon('fas', 'trash-alt', class: "fa-2x"), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to   icon('fas', 'plus', class: "fa-2x"), new_category_path %>
</div>
