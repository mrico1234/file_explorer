<p id="notice"><%= notice %></p>

<h1>Carpetas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <% if category.root? %>
        <tr>
          <td>
            <%= link_to icon('fas', 'folder', class: "fa-4x"), category %>
            <br>
            <%= category.name %>    
          </td>
          <td><%= link_to icon('fas', 'edit', class: "fa-2x"), edit_category_path(category) %></td>
          <td><%= link_to icon('fas', 'trash-alt', class: "fa-2x"), category, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to   icon('fas', 'plus', class: "fa-2x"), new_category_path %>
</div>
 

